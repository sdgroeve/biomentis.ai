---
const currentYear = new Date().getFullYear();
---

<footer class="footer">
  <div class="container">
    <div class="footer-content">
      <div class="footer-logo">
        <a href="/">
          <span class="logo-text">biomentis<span class="logo-highlight">.ai</span></span>
        </a>
        <p class="footer-tagline">
          Transforming ideas into successful digital products through innovative MVP development.
        </p>
      </div>
      
      <div class="footer-links">
        <div class="footer-links-column">
          <h3>Quick Links</h3>
          <ul>
            <li><a href="/about">About Us</a></li>
            <li><a href="/services">Services</a></li>
            <li><a href="/case-studies">Case Studies</a></li>
            <li><a href="/contact">Contact</a></li>
          </ul>
        </div>
        
        <div class="footer-links-column">
          <h3>Services</h3>
          <ul>
            <li><a href="/services/mvp-development">MVP Development</a></li>
            <li><a href="/services/custom-app">Custom App Development</a></li>
            <li><a href="/services/ui-ux-design">UI/UX Design</a></li>
          </ul>
        </div>
        
        <div class="footer-links-column">
          <h3>Contact</h3>
          <ul>
            <li><a href="mailto:hello@biomentis.ai">hello@biomentis.ai</a></li>
          </ul>
        </div>
      </div>
    </div>
    
    <div class="footer-bottom">
      <p>&copy; {currentYear} Biomentis.ai. All rights reserved.</p>
    </div>
  </div>
</footer>

<style>
  .footer {
    background-color: var(--light-bg);
    padding: 4rem 0 2rem;
    margin-top: 2rem;
  }

  .footer-content {
    display: grid;
    grid-template-columns: 1fr 2fr;
    gap: 4rem;
    margin-bottom: 2rem;
  }

  .logo-text {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--secondary-color);
  }

  .logo-highlight {
    color: var(--primary-color);
  }

  .footer-tagline {
    margin-top: 1rem;
    max-width: 300px;
  }

  .footer-links {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
  }

  .footer-links-column h3 {
    font-size: 1.125rem;
    margin-bottom: 1.25rem;
    color: var(--secondary-color);
  }

  .footer-links-column ul {
    list-style: none;
  }

  .footer-links-column li {
    margin-bottom: 0.75rem;
  }

  .footer-links-column a {
    color: var(--text-color);
    transition: color 0.3s ease;
  }

  .footer-links-column a:hover {
    color: var(--primary-color);
  }

  .footer-bottom {
    padding-top: 2rem;
    border-top: 1px solid rgba(0, 0, 0, 0.1);
    text-align: center;
    font-size: 0.875rem;
  }

  @media (max-width: 768px) {
    .footer-content {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .footer-links {
      grid-template-columns: 1fr;
    }
  }
</style>
